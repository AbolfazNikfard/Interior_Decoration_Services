@model List<UserCertainOrderViewModel>
@{
    ViewData["Title"] = "UserCertainOrders";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}
@{
    ulong ShowReadablePrice;
}
<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h2>گزارش سفارشات کاربر</h2>
                <p class="breadcrumbs">
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="responsive-data-table" class="table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>شناسه سفارش</th>
                                        <th>شناسه محصول</th>
                                        <th>نام محصول</th>
                                        <th>عکس محصول</th>
                                        <th>قیمت محصول</th>
                                        <th>تاریخ ثبت</th>
                                        <th>زمان ثبت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>@Model[i].orderId</td>

                                            <td>@Model[i].productId</td>

                                            <td>@Model[i].productName</td>

                                            <td>
                                                <img style="width:50px;height:50px" class="tbl-thumb" src="~/assets/images/product-image/@(Model[i].productImage)"
                                                     alt="Product Image">
                                            </td>

                                            @{
                                                ShowReadablePrice = (ulong)Model[i].productPrice;
                                            }
                                            <td>@ShowReadablePrice.ToMoreReadable()</td>

                                            <td>@Model[i].orderDatetime.ToShamsi()</td>

                                            <td>@Model[i].orderDatetime.ToString("HH:mm:ss")</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

