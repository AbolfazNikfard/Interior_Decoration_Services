@model WorkSampleListViewModel
@{
    ViewData["Title"] = "WorkSampleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="portfolio-section cmn_bg">
    <div class="container">
        <div class="center_tag" id="form2">
            <div id="CategoryContainer" class="btn_center">

                <button class="filter-button project_button active" data-filter="all" value="0" onclick="selectCategory(this)">همه</button>
                @foreach (var group in Model.groups)
                {
                    <button class="filter-button project_button" data-filter="fashion" value="@group.id" onclick="selectCategory(this)">@group.Name</button>
                }
            </div>
        </div>
        <div class="row zoom-gallery">
            @foreach (var sample in Model.Samples)
            {
                <div class="isotopeSelector filter fashion col-lg-3 col-sm-6" data-aos="zoom-out">
                    <div class="overlay">
                        <div class="border-portfolio">
                            <a class="zoom_gallery" href="~/assets/images/workSample-image/@sample.Image" data-source="http://500px.com/photo/32554131">
                                <div class="overlay-background">
                                    <i class="ti-plus" aria-hidden="true"></i>
                                </div>
                                <img style="width:240px;height:160px" src="~/assets/images/workSample-image/@sample.Image" class="img-fluid blur-up lazyload " alt="sampleImage">
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- pagination Start -->
    <div class="pagination_sec pagination_portfolio">
        @{
            int page = int.Parse(ViewData["page"].ToString());
            int pageCount = int.Parse(ViewData["pagesCount"].ToString());
