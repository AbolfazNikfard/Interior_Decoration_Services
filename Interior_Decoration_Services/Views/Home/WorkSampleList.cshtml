        <span id="activePage" style="display:none">@int.Parse(ViewData["page"].ToString())</span>
        <span id="pagesCount" style="display:none">@int.Parse(ViewData["pagesCount"].ToString())</span>
        <div class="content_detail__pagination cdp">
            <button style="cursor:pointer" class="cdp_i" onclick="previousPage()"><i class="fa fa-angle-double-left" aria-hidden="true"></i>قبلی</button>
